<Page
    x:Class="TextileCalculatorApp.CalculatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TextileCalculatorApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- QUALITIES -->
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock  Text="TYGKVALITETER"
                        Height="Auto"
                        Margin="10 10 10 10"
                        FontFamily="Arial"
                        FontSize="18"                        
                        Grid.Row="0"
                        Grid.Column="0"/>
            <ListBox    Margin="10 0 10 20"
                        Height="500"
                        Grid.Column="0"
                        Grid.Row="2"
                        FontFamily="Arial"
                        FontSize="18">
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>STOP</ListBoxItem>
            </ListBox>
        </Grid>
        
        <!--WIDTHS -->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="BREDDER"
                       Margin="10 10 10 10"
                           FontFamily="Arial"
                           FontSize="18"
                           Grid.Column="1"
                           Grid.Row="0"/>
            <ListBox     Margin="10 0 10 20"
                         FontFamily="Arial"
                         FontSize="18"
                         Grid.Column="1"
                         Grid.Row="1"
                         Height="Auto">
                <ListBoxItem>140 cm</ListBoxItem>
                <ListBoxItem>260 cm</ListBoxItem>
            </ListBox>
        </Grid>

        <!-- COLOURS -->
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock  Text="FÄRGER"
                        Margin="10 10 10 10"
                        FontFamily="Arial"
                        FontSize="18"
                        Grid.Column="2"
                        Grid.Row="0"/>
            <ListBox    Margin="10 0 10 20"
                        FontFamily="Arial"
                        FontSize="18"
                        Height="500"
                        Grid.Column="2"
                        Grid.Row="1">
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>STOP</ListBoxItem>
            </ListBox>
        </Grid>

        <!-- CALCULATION -->
        <Grid Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
            <TextBlock  Text="BESTÄLLNINGSVARA"
                        Margin="10 10 10 10"
                        FontFamily="Arial"
                        FontSize="18"
                        Grid.Column="3"
                        Grid.Row="0"
                        HorizontalAlignment="Center"/>
            <StackPanel Orientation="Vertical"
                        Grid.Column="3"
                        Grid.Row="1"
                        HorizontalAlignment="Center">
                    <Image  
                        
                        VerticalAlignment="Top"
                        Height="200"
                        Width="200"
                        Source="/Images/2850-37.jpg"/>
                    <TextBlock  x:Name="OrderingItem"
                                Text="OrderingItem"
                                Height="Auto"
                                Margin="0 10 10 0"
                                FontFamily="Arial"
                                FontSize="18"
                                HorizontalAlignment="Center"/>
                
                    <TextBlock  Text="Ange gardinlängd"
                                Margin="0 30 0 0"
                                FontFamily="Arial"
                                FontSize="18"
                                HorizontalAlignment="Center"/>
                    <TextBox    x:Name="lengthInput"
                                PlaceholderText="cm"
                                Width="70"     
                                HorizontalAlignment="Center"/>
                
                    <!--<TextBlock  Text="Välj upphängning"
                                Margin="0 20 10 0"
                                FontFamily="Arial"
                                FontSize="18"
                                HorizontalAlignment="Center"/>
                    <TextBox    x:Name="hangInput"
                                PlaceholderText="choice"
                                Width="150"     
                                HorizontalAlignment="Center"/>-->
                
                     <TextBlock  Text="Ange antal"
                                    Margin="0 20 10 0"
                                    FontFamily="Arial"
                                    FontSize="18"
                                    HorizontalAlignment="Center"/>
                    <TextBox    x:Name="numberInput"
                                PlaceholderText="Antal"
                                Width="70"     
                                HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
