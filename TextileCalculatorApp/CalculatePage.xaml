<Page
    x:Class="TextileCalculatorApp.CalculatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TextileCalculatorApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- MAIN -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- QUALITIES -->
            <TextBlock Text="TYGKVALITETER"
                       Height="auto"
                       Margin="10 10 10 10"
                       FontFamily="Arial"
                       FontSize="24"                        
                       Grid.Column="0"
                       Grid.Row="0"/>

            <ListBox     Margin="10 0 10 20"
                         Grid.Column="0"
                         Grid.Row="1"
                         FontFamily="Arial"
                         FontSize="24">
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>
                <ListBoxItem>TextileName</ListBoxItem>


                <ListBoxItem>hejsan</ListBoxItem>
            </ListBox>

            <!-- WIDTHS -->

            <TextBlock Text="BREDDER"
                       Margin="10 10 10 0"
                           FontFamily="Arial"
                           FontSize="24"
                           Grid.Column="1"
                           Grid.Row="0"/>

            <ListBox     Margin="10 0 10 20"
                         FontFamily="Arial"
                         FontSize="24"
                         Grid.Column="1"
                         Grid.Row="1"
                         Height="Auto">


                <ListBoxItem>140 cm</ListBoxItem>
                <ListBoxItem>260 cm</ListBoxItem>

            </ListBox>

            <!-- COLOURS -->

            <TextBlock Text="FÄRGER"
                       Margin="10 10 10 0"
                           FontFamily="Arial"
                           FontSize="24"
                           Grid.Column="2"
                           Grid.Row="0"
                           />
            <ListBox    Margin="10 0 10 20"
                         FontFamily="Arial"
                         FontSize="24"
                         Grid.Column="2"
                         Grid.Row="1"
                        Height="Auto">

                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>
                <ListBoxItem>ColourName</ListBoxItem>

            </ListBox>

            <TextBlock Text="BESTÄLLNINGSVARA"
                       FontFamily="Arial"
                           FontSize="24"
                           Grid.Column="4"
                           Grid.Row="0"
                       HorizontalAlignment="Center"
                       />
            <StackPanel Orientation="Vertical"
                        Grid.Column="4"
                        Grid.Row="2">
                <Image  
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="200"
                    Width="200"
                    Source="/Images/2850-37.jpg"
                   />
                <TextBlock x:Name="OrderingItem"
                       Text="OrderingItem"
                       FontFamily="Arial"
                           FontSize="24"
                           Grid.Column="4"
                           Grid.Row="0"
                       HorizontalAlignment="Center"
                       />
                <TextBox></TextBox>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
